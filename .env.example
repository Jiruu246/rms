# Environment Configuration
APP_ENV=development
APP_PORT=8080
APP_LOG_LEVEL=info
APP_DATABASE_URL=postgres://user:password@localhost/rms_db?sslmode=disable
APP_READ_TIMEOUT=15
APP_WRITE_TIMEOUT=15
APP_SHUTDOWN_TIMEOUT=15

# CORS Configuration
# Comma-separated list of allowed origins
# For development, you might use: http://localhost:3000,http://localhost:5173,http://localhost:8080
# For production, use your actual frontend domains: https://yourdomain.com,https://www.yourdomain.com
APP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
APP_POSTGRES_USER=rms_user
APP_POSTGRES_PASSWORD=rms_password
APP_POSTGRES_DB=rms_db

# JWT Configuration
APP_JWT_SECRET=some_secret_key_for_jwt_signing

# OAuth2
APP_GOOGLE_CLIENT_ID=your_google_client_id
APP_GOOGLE_CLIENT_SECRET=your_google_client_secret
APP_GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback
